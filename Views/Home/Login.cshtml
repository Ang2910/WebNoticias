@model WebNoticias.Models.ViewModels.LoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Login";
}

<style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: Arial, Helvetica, sans-serif;
}

body {
    background-color: rgb(244, 255, 255);
}

.container {
    display: flex;
    height: 700px;
    width: 1000px;
    box-shadow: 0 0 20px black;
    margin: auto;
    margin-top: 150px;
}

.username,
.psw {
    text-align: left;
}

.username:hover,
.psw:hover {
    transition: 400ms;
    color: yellow;
}

.info {
    rotate:calc(180deg);
        background: url(/logos/letra-w.png); 
        background-position: center center;
    background-repeat: no-repeat;
    background-size: cover;
    padding: 150px 50px;
    width: 50%;
    text-align: center;
    margin-bottom: -120px;
    height: 700px;
    }

.info div {
    rotate: calc(180deg);
}

.txt-1 {
    color: black;
    text-transform: capitalize;
    font-size: 30px;
    margin-bottom: -50px;
    font-style: italic;
}

.info h2 {
    color: rgb(255, 95, 60);
    text-transform: uppercase;
    font-size: 26px;
    margin-top: 60px;
}

.info hr {
    width: 55px;
    border: 4px solid red;
    margin-left: 170px;
    margin-top: 10px;
}

.txt-2 {
    color: black;
    font-size: 18px;
    margin-top: 30px;
}

.form {
    padding: 150px 100px;
    width: 50%;
    background-color: rgb(212, 95, 16);
    border-radius: 10px;
}

.form h2 {
    color: white;
    font-size: 30px;
    text-align: left;
    margin-bottom: 3px;
}

.form p {
    font-size: 22px;
    color: white;
    margin-bottom: 25px;
    text-align: left;
    text-wrap: wrap;
}

.inputs {
    display: flex;
    flex-direction: column;
}

.input-group {
    position: relative;
    margin-bottom: 20px;
}

.input-group i {
    position: absolute;
    left: 10px;
    top: 50%;
    transform: translateY(-50%);
    font-size: 20px;
    color: #ccc;
    margin-left: 260px;
    margin-top: 10px;
}

.input-group .username:hover h2{
    transition: 400ms;
    color: yellow;
}


.box {
    outline: none;
    border-color: black;
    border-width: 0px 0px 0px 5px;
    border-style: solid;
    padding: 15px 35px;
    margin-bottom: 20px;
    background-color: white;
    padding: 10px;
    padding-right: 30px;
    border-radius: 15px;
    border: 0;
    width: 300px;
    outline: none;
    font-size: 1rem;
    flex: 1;
    transition: background-color 0.3s;
}

.box:hover {
    transition: 400ms;
    background-color: lightgoldenrodyellow;
}

.inputs a {
    color: white;
    text-decoration: none;
    font-size: 15px;
    margin-bottom: 35px;
    text-align: center;
}

.submit {
    background-color: rgb(0, 0, 190);
    padding: 15px;
    border: 0;
    color: white;
    font-size: 18px;
    text-transform: uppercase;
    border-radius: 25px;
    transition: 400ms;
    height: 50px;
    width: 300px;
    margin: 5px;
}

.submit:hover {
    transition: 400ms;
    background-color: rgb(0, 0, 230);
    height: 55px;
    width: 310px;
    margin: 0px;
    font-size: 20px;
}
 
media (max-width: 990px) {
    .container {
        width: 350px;
        height: 600px;
        margin-top: 100px;
    }

    .info {
        display: none;
    }

    .form {
        width: 100%;
        padding: 30px;
    }

    .form h2 {
        margin-top: 40px;
    }
} 
    
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Document</title>
    <script src="https://kit.fontawesome.com/a2dd6045c4.js" crossorigin="anonymous"></script>
    
</head>

<body>
    <div class="container">
        <div class="info">
            <div>
                <p class="txt-1">Gracias Por Visitar JORANGEL</p>

                <h2 class="txt-welcome">¡Bienvenido!</h2>
                <hr />

                <p class="txt-2">
                    Este es el noticiero en donde te encontraras informado de las nuevas
                    novedades ocurridas en la region carbonifera.
                </p>
            </div>
        </div>

        <form class="form" method="post" action="~/Home/Login">
            <h2 style="text-align: center; margin-bottom: 23px">Iniciar Sesion</h2>
            <p>
                Porfavor, ingrese los datos correspondientes para iniciar sesion con
                su cuenta
            </p>
            <div class="inputs">
                <div class="input-group">
                    <i class="fas fa-envelope"></i>
                    <h2 class="username">Usuario:</h2>
                    <input type="email" required asp-for="Correo" class="box" placeholder="Usuario" />
                </div>

                <div class="input-group">
                    <i class="fas fa-lock"></i>
                    <h2 class="psw">Contraseña:</h2>
                    <input type="password" class="box" required asp-for="Contrasena"  placeholder="Contraseña" />
                </div> 

                <a href="#">¿Olvidaste tu contraseña?</a>

                <p id="error">@Html.ValidationSummary(true)</p>

                <input type="submit" value="Ingresar" class="submit" /> 
            </div>
        </form>
    </div>
</body>
</html>


