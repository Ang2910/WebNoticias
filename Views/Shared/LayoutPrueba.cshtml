@inject WebNoticias.Repositories.CategoriasRepository repos;
@{
    var datos = repos.GetAll().Select(x => x.Nombre);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/estilos.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>JORANGEL</title>

    <style>
        /* Estilos para la sección de navegación */
        nav#menu {
            display: flex;
            flex-flow: row;
            background-color: #2fb4cc;
            text-align: right; /* Alinea el texto a la derecha */
        }

            nav#menu ul {
                list-style: none;
                display: flex;
                justify-content: flex-end; /* Alinea los elementos al final del contenedor */
            }

        ul .Bienvenido {
            margin-left: -5%;
            /* Alinea los elementos al final del contenedor */
        }

        ul .Nosotros {
            margin-right: -100px;
            /* Alinea los elementos al final del contenedor */
        }

        ul .Contacto {
            margin-right: -100px;
            /* Alinea los elementos al final del contenedor */
        }

        nav#menu li {
            margin-left: 20px; /* Mueve los elementos a la derecha */
        }

        nav#menu a {
            text-decoration: none;
            color: #fff;
            font-size: 18px;
            font-weight: bold;
            transition: color 0.3s ease;
        }

            nav#menu a:hover {
                color: #ff8c00; /* Color al pasar el mouse */
            }

            /* Estilos para el botón de cerrar sesión */
            nav#menu a.logout {
                background-color: #ff8c00; /* Color de fondo para el botón de cerrar sesión */
                color: #fff;
                padding: 8px 15px;
                border-radius: 5px;
                transition: background-color 0.3s ease;
            }

                nav#menu a.logout:hover {
                    background-color: #e07b00; /* Color de fondo al pasar el mouse */
                }

        /* Estilos para las nuevas secciones */

        section.sobre-nosotros {
            background-color: #f9f9f9;
            padding: 50px 0;
        }

            section.sobre-nosotros h2 {
                color: #333;
                font-size: 2em;
                margin-bottom: 20px;
            }

            section.sobre-nosotros p {
                color: #666;
                font-size: 1.2em;
                line-height: 1.6em;
                margin-bottom: 30px;
            }

            section.sobre-nosotros h3 {
                color: #333;
                font-size: 1.5em;
                margin-bottom: 10px;
            }

            section.sobre-nosotros .container {
                max-width: 1200px;
                margin: 0 auto;
                padding: 0 20px;
            }

        section.contact-section {
            background-color: #e6e6e6;
            padding: 50px 0;
        }

            section.contact-section h2 {
                color: #333;
                font-size: 2em;
                margin-bottom: 20px;
            }

            section.contact-section p {
                color: #666;
                font-size: 1.2em;
                line-height: 1.6em;
                margin-bottom: 30px;
            }

            section.contact-section form {
                max-width: 600px;
                margin: 0 auto;
            }

                section.contact-section form label {
                    display: block;
                    margin-bottom: 10px;
                    color: #333;
                    font-size: 1.2em;
                }

                section.contact-section form input,
                section.contact-section form textarea {
                    width: 100%;
                    padding: 10px;
                    margin-bottom: 20px;
                    font-size: 1em;
                    border: 1px solid #ccc;
                    border-radius: 5px;
                }

                section.contact-section form button {
                    background-color: #2fb4cc;
                    color: #fff;
                    padding: 10px 20px;
                    font-size: 1.2em;
                    border: none;
                    border-radius: 5px;
                    cursor: pointer;
                }

                    section.contact-section form button:hover {
                        background-color: #ff8c00;
                    }

            section.contact-section .social-media {
                margin-top: 30px;
            }

                section.contact-section .social-media h3 {
                    color: #333;
                    font-size: 1.5em;
                    margin-bottom: 20px;
                }

            section.contact-section ul {
                list-style: none;
                padding: 0;
                margin: 0;
                display: flex;
            }

                section.contact-section ul li {
                    margin-right: 20px;
                }

                    section.contact-section ul li a {
                        color: #2fb4cc;
                        font-size: 1.5em;
                        transition: color 0.3s ease;
                    }

                        section.contact-section ul li a:hover {
                            color: #ff8c00;
                        }

    </style>

</head>

