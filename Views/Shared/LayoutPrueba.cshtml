    <div class="Encabezado">
        <nav id="menu">
            <ul id="Welcome">
                <li><a class="Bienvenido"></a></li>
            </ul>
            <ul>
                <li><a href="#nosotros" class="Nosotros">About</a></li>
                <li><a href="#contacto" class="Contacto">Contact</a></li>
                <li><a href="#" onclick="confirmLogout()">Cerrar Sesión <i class="fas fa-sign-out-alt"></i></a></li>

            </ul>
        </nav>
        <script>
            function confirmLogout() {
                var result = confirm('¿Está seguro de cerrar sesión?');
                if (result) {
                    window.location.href = '@Url.Action("LogOut", "Home")';
                }
            }
        </script>
        <hr>
        <header>
            <nav id="navegar">
                <img src="~/logos/letra-w.png" alt="Inicio">
                <a href="~/Home/Index">TODAS</a>
                @foreach (var item in datos)
                {
                    <a href="~/Home/Index/@item.Replace(" ","-")">@item</a>
                }
            </nav>
        </header>
        <h1>JORANGEL</h1>
    </div>


    <main>
        @RenderBody()
    </main>
